<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Focus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <style name="Theme.Focus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Focus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="Theme.Focus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Circular Progress Bar Style -->
    <style name="CircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/circular_progress_drawable</item>
        <item name="android:progressDrawable">@drawable/circular_progress_drawable</item>
    </style>
    
    <!-- Premium Card Style -->
    <style name="PremiumCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>
    
    <!-- Glass Card Style -->
    <style name="GlassCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Focus.Splash" parent="Theme.Focus.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Onboarding Theme -->
    <style name="Theme.Focus.Onboarding" parent="Theme.Focus.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Material Design 3 Button Styles for Onboarding -->
    <style name="OnboardingButton.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">28dp</item>
        <item name="elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="OnboardingButton.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white_alpha_80</item>
        <item name="rippleColor">@color/white_alpha_30</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="OnboardingButton.GetStarted" parent="OnboardingButton.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="iconGravity">end</item>
        <item name="icon">@drawable/ic_arrow_forward</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <!-- Enhanced Progress Bar Style -->
    <style name="OnboardingProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_height">6dp</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="indicatorColor">@color/white</item>
        <item name="trackColor">@color/white_alpha_30</item>
    </style>

    <!-- Material Design 3 Text Styles -->
    <style name="OnboardingText.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="OnboardingText.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/white_alpha_80</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="OnboardingText.Description" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white_alpha_70</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>
</resources>
