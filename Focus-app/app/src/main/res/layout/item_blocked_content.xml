<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Type Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/error">

            <ImageView
                android:id="@+id/iv_type_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shield"
                app:tint="@android:color/white"
                tools:src="@drawable/ic_shield" />

        </androidx.cardview.widget.CardView>

        <!-- Content Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                tools:text="Facebook" />

            <TextView
                android:id="@+id/tv_content_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Media App"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="2dp"
                tools:text="Social Media App" />

        </LinearLayout>

        <!-- Block Count Badge -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/accent">

            <TextView
                android:id="@+id/tv_block_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                tools:text="12" />

        </androidx.cardview.widget.CardView>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="8dp"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/error"
            app:iconSize="20dp"
            app:iconPadding="0dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
